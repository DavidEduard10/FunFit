<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="409dp"
        android:layout_height="55dp"
        android:text="Bem-vindos ao aplicativo..."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logoff" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#E60000"
        android:text="Fazer Login"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_cadastro"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bt_cadastro"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#006C04"
        android:text="Fazer Cadastro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>